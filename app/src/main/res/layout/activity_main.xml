<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

android:layout_height="match_parent"
tools:context="com.example.android.chesscounter.MainActivity">

    <ImageView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:scaleType="centerCrop"
    android:src="@drawable/back2_mod"

    />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="White"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView

                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="56sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="#50FFFFFF"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addOneForTeamA"
                android:text="pawn +1"
                android:textColor="#000000"
                android:textSize="14dp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50FFFFFF"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addThreeForTeamA"
                android:text="knight +3"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50FFFFFF"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addThreeForTeamA"
                android:text="bishop +3"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50FFFFFF"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addFiveForTeamA"
                android:text="rook +5"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50FFFFFF"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addNineForTeamA"
                android:text="queen +9"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <View

            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Black"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView

                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="#50000000"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addOneForTeamB"
                android:text="pawn +1"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50000000"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addThreeForTeamB"
                android:text="knight +3"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50000000"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addThreeForTeamB"
                android:text="bishop +3"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50000000"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addFiveForTeamB"
                android:text="rook +5"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:background="#50000000"
                android:fontFamily="serif"
                android:gravity="center"
                android:onClick="addNineForTeamB"
                android:text="queen +9"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:onClick="reset"
        android:text="Checkmate"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="italic" />

</RelativeLayout>
